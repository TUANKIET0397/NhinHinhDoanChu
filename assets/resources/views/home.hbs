<script>
    document.addEventListener('DOMContentLoaded', function () { const btn =
    document.getElementById('play-button'); btn.addEventListener('click',
    function () { const name =
    document.getElementById('playerName').value.trim(); if (!name) {
    alert('Please enter your name!'); return; } // Lưu tên player vào
    localStorage localStorage.setItem('playerName', name); window.location.href
    = '/gamePlay?playerName=' + encodeURIComponent(name); }); });
</script>