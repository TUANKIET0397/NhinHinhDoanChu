{{#contentFor "styles"}}
    <link rel="stylesheet" href="/css/player.css" />
{{/contentFor}}

<div class="container">
    <div class="player_sidebar">
        <div class="player-drawing">
            <div class="player_playing">

            </div>
        </div>
        <div class="player_navigate">
            <button class="player_buttons out">Out game</button>
            <button class="player_buttons share">Share</button>
        </div>
    </div>

    <section class="drawing-board" style="background: none !important;">
        <!-- khung chứa canvas vẽ -->

        <div
            id="drawing-board__choice"
            class="drawing-board__choice"
            style="display: none;"
        >
            <div class="drawing-board__wrapper" id="drawing-board__first">
                <h2 class="drawing-board__title">Do you want to draw?</h2>
                <h3 class="drawing-board__username" id="drawer-name-first"></h3>
                <img
                    src="https://media.giphy.com/media/l0HlA1V6N1FjkK9iM/giphy.gif"
                    alt="fun gif"
                    class="drawing-board__gif"
                />
                <div class="drawing-board__options">
                    <button
                        class="drawing-board__button"
                        onclick="handleChoice('draw')"
                    >Vẽ</button>
                    <button
                        class="drawing-board__button"
                        onclick="handleChoice('no-draw')"
                    >Không vẽ</button>
                </div>
            </div>
            <div
                class="drawing-board__wrapper"
                id="drawing-board__second"
                style="display: none;"
            >
                <h2 class="drawing-board__title">Choose a keyword!</h2>
                <h3
                    class="drawing-board__username"
                    id="drawer-name-second"
                ></h3>
                <img
                    src="https://media.giphy.com/media/l0HlA1V6N1FjkK9iM/giphy.gif"
                    alt="fun gif"
                    class="drawing-board__gif"
                />
                <div class="drawing-board__options">
                    <!-- Các button chọn từ sẽ được thêm động bằng JavaScript -->
                </div>
            </div>
        </div>

        <div
            id="drawing-board__canvas"
            class="drawing-board__canvas"
            style="display: none;"
        >
            <canvas id="drawing-canvas"></canvas>
            <div class="drawing-board__progress">
                <div
                    class="drawing-board__progress-fill"
                    id="drawing-board__canvas-fill"
                ></div>
            </div>
        </div>

        <!-- canvas -->
    </section>
    <div class="tools">
        <section class="tools-board">
            <div class="row">
                <label class="title"><strong>Options</strong></label>
                <ul class="options">
                    <li class="option active tool" id="brush">
                        <img src="./assets/icons/brush.svg" alt="" />
                        <span>Brush</span>
                    </li>
                    <li class="option tool" id="eraser">
                        <img src="./assets/icons/eraser.svg" alt="" />
                        <span>Eraser</span>
                    </li>
                    <li class="option">
                        <input
                            type="range"
                            id="size-slider"
                            min="1"
                            max="30"
                            value="5"
                        />
                    </li>
                </ul>
            </div>
            <div class="row colors">
                <label class="title"><b>Colors</b></label>
                <ul class="options">
                    <li class="option"></li>
                    <li class="option selected"></li>
                    <li class="option"></li>
                    <li class="option"></li>
                    <li class="option">
                        <input type="color" id="color-picker" value="#4A98F7" />
                    </li>
                </ul>
            </div>
            <div class="row buttons">
                <button class="clear-canvas">clear Image</button>
                <button class="save-img" style="display: none;">Save As Image</button>
            </div>
        </section>
        <!-- form chat -->
        <div class="chat-require">
            <div class="chat_content">
                <div class="chat_body">

                </div>
                <input
                    type="text"
                    class="chat_input"
                    placeholder="Type your answers here..."
                />
            </div>
        </div>
    </div>
</div>

{{#contentFor "scripts"}}
    <script src="/js/player.js"></script>
{{/contentFor}}